@using Microsoft.AspNetCore.Identity
@using Cardstone.Data.Models

@inject SignInManager<Player> SignInManager
@inject UserManager<Player> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a>XP:</a>
            </li>
            <li>
                <fieldset disabled>
                    <div class="form-group">
                        <input type="text" id="xp" class="form-control" placeholder="XP">
                    </div>
                </fieldset>
            </li>
            <li>
                <a>Coins:</a>
            </li>
            <li>
                <fieldset disabled>
                    <div class="form-group">
                        <input type="text" id="coins" class="form-control" placeholder="Coins">
                    </div>
                </fieldset>
            </li>
            <li>
                <a asp-area="" asp-controller="Game" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
            <a asp-area="" asp-controller="Settings" asp-action="Index">
                <span><img class="navbar-icon" src="https://vignette.wikia.nocookie.net/aj-item-worth/images/9/91/Settings.png" /></span>
            </a>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Login</a></li>
    </ul>
}